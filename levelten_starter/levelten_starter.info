name = Levelten Starter
description = Levelten Starter sub-theme. Requires <a href="http://drupal.org/project/fusion">Fusion Core</a> and the <a href="http://drupal.org/project/skinr">Skinr</a> module.
base theme = fusion_core
core = 6.x
engine = phptemplate

; remove 'levelten-starter and replace with theme name, change name of stylesheet to match
stylesheets[all][] = css/levelten-starter-style.css
stylesheets[all][] = css/blocks.css
stylesheets[all][] = css/content.css
stylesheets[all][] = css/panels.css
stylesheets[all][] = css/views.css
stylesheets[all][] = css/skins.css
stylesheets[all][] = skinr/skinr.css

regions[sidebar_first] = sidebar first
regions[sidebar_last] = sidebar last
regions[header_top] = header top
regions[header] = header
regions[banner] = banner
regions[preface_top] = preface top
regions[preface_bottom] = preface bottom
regions[content_top] = content top
regions[content] = content
regions[content_bottom] = content bottom
regions[bottom] = bottom
regions[postscript_top] = postscript top
regions[postscript_bottom] = postscript bottom
regions[footer] = footer
regions[node_top] = node top
regions[node_bottom] = node bottom

features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = primary_links
features[] = secondary_links

; Default theme settings
settings[theme_grid] = grid12-960
settings[theme_grid_options][] = grid12-960
settings[theme_grid_options][] = grid12-fluid
settings[fluid_grid_width] = fluid-100
settings[theme_font_size] = font-size-12
settings[sidebar_layout] = sidebars-split
settings[sidebar_first_width] = 4
settings[sidebar_last_width] = 2

; Inherit Skinr styles from Fusion Core
skinr[options][inherit_skins] = true

